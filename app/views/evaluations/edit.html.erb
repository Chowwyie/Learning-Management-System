<% provide(:nav_path, (render 'layouts/course_path', nav_path: ['To-Do Evaluations', @evaluation.presentation.name])) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @evaluation do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :score, 'Score from 0-10' %>
      <%= f.number_field :score, class: 'form-control' %>
      <%= f.label :evaluation %>
      <%= f.text_area :evaluation, size: "70x5", class: 'form-control' %>
      <%= f.submit "Submit Evaluation", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>